import java.util.Scanner;

public class Trabalho {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = 0;
         do {
            System.out.print("Insira a quantidade desejada de posições do vetor: ");
            n = scanner.nextInt();
            if (n <= 0) {
                System.out.println("A solução não suporta valores negativos. Tente novamente.");
            }
        } while (n <= 0);

        int[] vetor = new int[n];

        preencherVetorRecursivo(vetor, scanner);
        System.out.println("Elementos inseridos no vetor: ");
        exibirVetor(vetor);
    }

    public static void preencherVetorRecursivo(int[] vetor, Scanner scanner){
        int i = 0;        
        System.out.println("Insira o valor do " + (i+1) + "º elemento do vetor: ");
        vetor[i] = scanner.nextInt();
        i++;
        preencherVetorRecursivo(vetor, scanner);
    }

    public static void exibirVetor(int[] vetor){
        for(int i=0; i<vetor.length; i++){
            System.out.println("Valor do " + (i+1) + "º elemento: " + vetor[i]);
        }
    }
}
